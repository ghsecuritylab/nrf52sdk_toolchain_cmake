{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo variable",
            "type": "shell",
            "command": "echo variable is: --- ${env:ARM_LIBRARY_PATH} ---",
            "problemMatcher": []
        },
        {
            "label": "cmake configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-Bbuild",
                "-GNinja",
                "-DCMAKE_TOOLCHAIN_FILE=${env:NRF5_SDK_PATH}/cmake/toolchain/nrf52_toolchain.cmake",
                "-DARM_TOOLCHAIN_PATH=${env:ARM_TOOLCHAIN_PATH}",
                "-DARM_LIBRARY_PATH=${env:ARM_LIBRARY_PATH}",
                "-DNRF5_SDK_PATH=${env:NRF5_SDK_PATH}",
                "-DNRFJPROG=${env:NRFJPROG}",
                "-DNRF_CHIP=${env:NRF_CHIP}",
                "-DNRF_BOARD=${env:NRF_BOARD}",
                "-DNRF_SOFTDEVICE=${env:NRF_SOFTDEVICE}",
                "."
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "cmake build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/build"
                ]
            }
        },
        {
            "label": "flash_build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "flash_build"
            ],
            "problemMatcher": []
        },
        {
            "label": "flash_softdevice",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "flash_softdevice"
            ],
            "problemMatcher": []
        },
        {
            "label": "nrf_reset",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "nrf_reset"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "rm",
                "args": [
                    "-r",
                    "build"
                ]
            },
            "windows": {
                "command": "rd",
                "args": [
                    "/s",
                    "/q",
                    "build"
                ]
            },
            "problemMatcher": []
        }
    ]
}